# color and with classfication
alias ls='ls -FG'
alias ll='ls -alFG'

# grep
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# alert for rm, cp, mv
alias rm='rm -iv'
alias cp='cp -iv'
alias mv='mv -iv'

# screens
alias scr='screen -rD'

# vim
alias vi='vim'

